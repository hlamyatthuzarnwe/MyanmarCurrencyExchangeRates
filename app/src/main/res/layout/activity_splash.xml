<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmtzn.myanmarcurrencyexchangerates.SplashActivity">

    <LinearLayout
        android:id="@+id/ll_sms_splah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:src="@drawable/currency_exchange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_margin="@dimen/dimen_2dp"
            android:text="Myanmar Currency Exchange Rates"
            android:textSize="@dimen/txt_size_ex_large"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>